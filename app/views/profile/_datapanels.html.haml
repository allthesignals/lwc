%nav#sticky-menu
  %div.row
    %div.col-md-6#donut-chart-menu
      %span{style: "font-size: 1em"}
        Family Composition:
    %div.col-md-6
      %span{style: "font-size: 1em"}
        Geography: 
      = if @geography.class.name == "State"
        - form_for @geography, :as => :geography, :html =>{ :role => "form" } do |f|
          %div.col-xs-10
            = f.autocomplete_field :name, autocomplete_geography_name_states_path, :class => "form-control", :update_elements => {:census_id => '#census_id', :geography_type => '#geography_type'}
            = f.hidden_field :census_id, :id => "census_id"
            = f.hidden_field :geography_type, :value=>"state", :id => "geography_type"
          %div.col-xs-2
            = f.submit :class => "btn btn-default"
      = if @geography.class.name == "County"
        - form_for @geography, :as => :geography, :html =>{ :role => "form" } do |f|
          %div.col-xs-10
            = f.autocomplete_field :name, autocomplete_geography_name_counties_path, :class => "form-control", :update_elements => {:census_id => '#census_id', :geography_type => '#geography_type'}
            = f.hidden_field :census_id, :id => "census_id"
            = f.hidden_field :geography_type, :value=>"state", :id => "geography_type"
          %div.col-xs-2
            = f.submit :class => "btn btn-default"
      = if @geography.class.name == "Metro"
        - form_for @geography, :as => :geography, :html =>{ :role => "form" } do |f|
          %div.col-xs-10
            = f.autocomplete_field :name, autocomplete_geography_name_metros_path, :class => "form-control", :update_elements => {:census_id => '#census_id', :geography_type => '#geography_type'}
            = f.hidden_field :census_id, :id => "census_id"
            = f.hidden_field :geography_type, :value=>"state", :id => "geography_type"
          %div.col-xs-2
            = f.submit :class => "btn btn-default"

