  %div.col-md-3#donut-chart-menu
  %div.col-md-2
    %h5
      Geography: 
  %div.col-md-4
    = if @geography.class.name == "State"
      - form_for @geography do |f|
        - f.autocomplete_field :state_name, autocomplete_geography_name_states_path
    = if @geography.class.name == "County"
      - form_for @geography do |f|
        - f.autocomplete_field :countyname, autocomplete_geography_name_counties_path
    = if @geography.class.name == "Metro"
      - form_for @geography do |f|
        - f.autocomplete_field :cbsa_name, autocomplete_geography_name_metros_path
